
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/deleiy/api-tests.git'
            }
        }

        stage('Instalar DependÃªncias') {
            steps {
                bat 'npm install'
            }
        }

        stage('Rodar Testes API') {
            steps {
                bat 'npx cypress run --spec \"cypress/e2e/api-tests/*.cy.js\"'
            }
        }
    }
}
